set java path: 

export JAVA_HOME=/usr/lib/jvm/jdk-8-oracle-arm32-vfp-hflt

install sodium: 

wget https:/download.libsodium.org/libsodium/releases/LATEST.tar.gz 
tar zxvf LATEST.tar.gz 
cd libsodium-stable 
./configure 
make && make check 
sudo make install 


install zmq: 

apt-get install make autoconf automake libtool -y 
wget 'link to latest tar download' 
tar zxvf zeromq-4.1.4.tar.gz
cd zeromq-4.1.4
./configure
make 
make install 
ldconfig 
apt-get install python-pip python-all-dev python-zmq

install zcm: 
./waf configure --use-ipc --use-zmq
./waf build 
sudo ./waf install 


build command: 
g++ -o interface interface.cpp ../message_types/actuators_t.hpp ../message_types/sensor_data_t.hpp -lzcm
g++ -o hitl hitl_autopilot_main.cpp ../message_types/sensor_data_t.hpp ../message_types/actuators_t.hpp -lzcm

generate header files for message types in cpp: 
zcm-gen --cpp msg_t.zcm 



